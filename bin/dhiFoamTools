foamParmSet()
{
    sed -i "s/${1}\s.*;/${1}\t${2};/" ${3}
}

foamRunCasesIn()
{
    for var in "$@";
    do
        echo "$var"
        for n in $( find $var -name "controlDict" );
        do
            caseDir=$( dirname $(dirname $n))
            echo "Running case " $caseDir "..."
            cd $caseDir
            ./Allrun &
            cd -
        done
    done
}

