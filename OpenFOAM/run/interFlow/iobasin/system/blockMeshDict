(
    inlet
    {
        type patch;
        faces
        (
            (8 12 15 11)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (17 18 22 21)
        );
    }

    walls
    {
        type patch;
        faces
        (
            // Basin
            (0 3 2 1)
            (0 1 5 4)
            (2 3 7 6)

            // Inlet
            (8 11 10 9)
            (8 9 13 12)
            (10 11 15 14)
            (12 13 14 15)

            // Outlet
            (16 19 18 17)
            (16 17 21 20)
            (18 19 23 22)
            (20 21 22 23)
        );
    }

    atmosphere
    {
        type patch;
        faces
        (
            (4 5 6 7)
        );
    }

    inletRightPatch
    {
        type patch;
        faces
        (
            (9 10 14 13)
        );
    }

    basinLeftPatch
    {
        type patch;
        faces
        (
            (0 4 7 3)
        );
    }

    outletLeftPatch
    {
        type patch;
        faces
